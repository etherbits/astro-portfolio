---
import { cn } from "../utils/tailwind";
interface Props {
  class?: string;
}

const { props } = Astro;
const baseClass = `text-base block w-fit whitespace-nowrap rounded-[4px]
border border-slate-300 bg-black px-5 py-3 tracking-wider text-slate-300 sm:clamp-xl`;
---

<div button-container class={"flex relative group h-auto cursor-pointer"}>
  <button
    outline-button
    type="button"
    class={cn(
      baseClass,
      // "transition-all group-hover:translate-y-[-4%]  group-hover:scale-[1.06]",
      props.class,
    )}
  >
    <slot />
  </button>
  <div
    class="absolute border-neutral-600 top-0 translate-y-[18%]
  left-0 w-full h-full border rounded-[4px] z-[-1]"
  >
  </div>
</div>

<script>
  import animejs from "animejs/lib/anime.es";

  const btnContainers = document.querySelectorAll(
    "[button-container]",
  ) as NodeListOf<HTMLDivElement>;

  function startClickAnim(btn: HTMLButtonElement) {
    animejs({
      targets: btn,
      translateY: "18%",
      scale: 1,
      duration: 150,
      easing: "linear",
    });
  }
 
  function startHoverAnim(btn: HTMLButtonElement) {
    animejs({
      targets: btn,
      translateY: "-4%",
      scale: 1.06,
      duration: 150,
      easing: "linear",
    });
  }

  function resetAnim(btn: HTMLButtonElement) {
    animejs({
      targets: btn,
      translateY: "0%",
      scale: 1.04,
      duration: 150,
      easing: "easeOutElastic",
    });
  }

  const addTouchAnimation = () =>
    btnContainers.forEach((btnContainer) => {
      const btn = btnContainer.querySelector(
        "[outline-button]",
      ) as HTMLButtonElement;

      btnContainer.addEventListener("mousedown", () => startClickAnim(btn));
      btnContainer.addEventListener("mouseenter", () => startHoverAnim(btn));
      btnContainer.addEventListener("mouseleave", () => resetAnim(btn));
      btnContainer.addEventListener(
        "touchstart",
        () => {
          startClickAnim(btn);
        },
        { passive: true },
      );
      document.addEventListener("mouseup", () => {
        resetAnim(btn);
      });
      document.addEventListener(
        "touchend",
        () => {
          resetAnim(btn);
        },
        { passive: true },
      );
      document.addEventListener("dragend", () => {
        resetAnim(btn);
      });
    });

  addTouchAnimation();
</script>
