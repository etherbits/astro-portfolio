---
import { cn } from "../utils/tailwind";
interface Props {
  class?: string;
}

const { props } = Astro;

const baseClassName: string =
  "text-[1.875rem] sm:text-[clamp(3.2rem,_4.45vw,_4.2rem)] bg-gradient-to-br font-extrabold [-webkit-text-stroke:2px_transparent] md:[-webkit-text-stroke:4px_transparent] from-blue-200  to-slate-600 bg-clip-text text-black";
---

<div class="relative w-full text-center select-none overflow-visible h-fit">
  <p class={cn(baseClassName, props.class)}>
    <slot />
  </p>
  <p
    class={cn(
      baseClassName,
      "absolute left-0 top-[6px] md:top-[12%] z-[-1] opacity-60 w-full h-full",
      props.class,
    )}
  >
    <slot />
  </p>
</div>
