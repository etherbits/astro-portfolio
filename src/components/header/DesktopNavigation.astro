---
import { cn } from "../../utils/tailwind";
import { getLangFromUrl, generateTranslator } from "../../i18n/utils";
import type { TranslationKey } from "../../i18n/ui";
export const navigationLinks = [
  { name: "home", icon: "Home", href: "/" },
  { name: "projects", icon: "Folder", href: "/projects" },
  { name: "journey", icon: "Milestone", href: "/journey" },
  { name: "contact", icon: "Mail", href: "/contact-me" },
];

const path = Astro.url.pathname;

const lang = getLangFromUrl(Astro.url);
const t = generateTranslator(lang);
---

<nav class="hidden md:block">
  <ul
    class="flex items-center gap-4 whitespace-nowrap text-slate-400 md:text-clamp-lg lg:gap-8"
  >
    {
      navigationLinks.map((link) => {
        const navTranslationKey = ("navigation." + link.name) as TranslationKey;
        return (
          <li>
            <a
              href={link.href}
              class={cn({ "text-slate-300": path === `/${lang}${link.href}` })}
            >
              {t(navTranslationKey)}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
